<%# app/views/list_items/_list_item.html.erb %>
<li data-id="<%= list_item.id %>" 
    class="bg-white rounded-lg shadow-sm border transition-all hover:shadow-md">
  
  <!-- Contenuto dell'item -->
  <div class="flex items-center p-4 gap-3">
    <!-- Handle per il drag -->
    <div class="drag-handle cursor-move text-gray-400 hover:text-gray-600 transition-colors">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path d="M7 2a2 2 0 1 1 .001 4.001A2 2 0 0 1 7 2zM7 8a2 2 0 1 1 .001 4.001A2 2 0 0 1 7 8zM7 14a2 2 0 1 1 .001 4.001A2 2 0 0 1 7 14zM13 2a2 2 0 1 1 .001 4.001A2 2 0 0 1 13 2zM13 8a2 2 0 1 1 .001 4.001A2 2 0 0 1 13 8zM13 14a2 2 0 1 1 .001 4.001A2 2 0 0 1 13 14z"></path>
      </svg>
    </div>
    
    <!-- Pulsante Expand/Collapse con Stimulus -->
    <% if list_item.children.any? %>
      <button class="collapse-btn w-5 h-5 flex items-center justify-center text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded transition-colors"
              data-action="click->collapse#toggle"
              data-target-id="children-<%= list_item.id %>"
              title="Espandi/Comprimi">
        <svg class="w-4 h-4 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
    <% else %>
      <div class="w-5 h-5 collapse-spacer"></div> <!-- Spacer con classe identificativa -->
    <% end %>
    
    <!-- Contenuto -->
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <!-- Numero automatico -->
        <span class="item-number"></span>
        
        <!-- Contenuto responsive ottimizzato -->
        <div class="flex-1">
          <!-- Layout responsive: mobile = stack, desktop = inline -->
          <div class="md:flex md:items-center md:gap-3">
            <!-- Titolo -->
            <h3 class="font-semibold text-gray-900 text-lg md:flex-shrink-0">
              <%= list_item.title %>
            </h3>
            
            <!-- Content responsive -->
            <% if list_item.content.present? %>
              <!-- Mobile: solo icona occhio cliccabile -->
              <div class="md:hidden">
                <button class="text-gray-400 hover:text-gray-600 ml-2 p-1" 
                        onclick="this.nextElementSibling.classList.toggle('hidden')"
                        title="Mostra/nascondi descrizione">
                  üëÅÔ∏è
                </button>
                <p class="text-gray-600 text-sm mt-2 hidden">
                  <%= list_item.content %>
                </p>
              </div>
              
              <!-- Desktop: inline con titolo -->
              <div class="hidden md:block flex-1">
                <span class="text-gray-400 mx-2">‚Ä¢</span>
                <span class="text-gray-600 text-sm">
                  <%= truncate(list_item.content, length: 120) %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Azioni compatte -->
    <div class="flex items-center gap-1">
      <!-- Solo + per aggiungere sotto-item -->
      <button onclick="window.location.href='/list_items/new?parent_id=<%= list_item.id %>'" 
              class="w-7 h-7 flex items-center justify-center text-green-600 hover:text-green-700 hover:bg-green-50 rounded-full transition-colors"
              title="Aggiungi sotto-elemento">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
        </svg>
      </button>
      <!-- Link Show -->
      <%= link_to list_item_path(list_item),
          data: { turbo: "false" },
          class: "w-7 h-7 flex items-center justify-center text-gray-600 hover:text-gray-700 hover:bg-gray-50 rounded-full transition-colors",
          title: "Visualizza" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
      <% end %>
      <%= link_to edit_list_item_path(list_item),
         data: { turbo: "false" },
          class: "w-7 h-7 flex items-center justify-center text-blue-600 hover:text-blue-700 hover:bg-blue-50 rounded-full transition-colors",
          title: "Modifica" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>
      
    <%= button_to list_item_path(list_item),
    method: :delete,
    data: { 
      turbo: "false",
      confirm: "Sicuro di voler eliminare questo elemento e tutti i suoi sotto-elementi?"
    },
    class: "w-7 h-7 flex items-center justify-center text-red-600 hover:text-red-700 hover:bg-red-50 rounded-full transition-colors border-none bg-transparent p-0",
    title: "Elimina" do %>
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
  </svg>
<% end %>    
    </div>
  </div>
  
  <!-- Sotto-elementi con indentazione ridotta -->
  <% if list_item.children.any? %>
    <div id="children-<%= list_item.id %>" class="collapsible-content ml-4 pb-2">
      <ul data-sortable-target="list" 
          data-parent-id="<%= list_item.id %>"
          class="space-y-2 pl-2">
        <%= render partial: "list_item", collection: list_item.children.order(:position, :created_at) %>
      </ul>
    </div>
  <% else %>
    <ul data-sortable-target="list" 
        data-parent-id="<%= list_item.id %>"
        class="space-y-2 pl-2">
      <li></li>
    </ul>
  <% end %>
</li>

